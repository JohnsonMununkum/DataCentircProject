<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students Page</title>
</head>
<body>
    <h1>Students Page</h1>

        <!-- Add students button -->
    <a href="/students/add">Add Students</a>
    <br>
    <a href="/">Home</a>

        <!-- Display all Students in a table id, name, age, update link also -->
        <table border="1">
            <thead>
                <tr>
                    <th>Student ID</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach(student => { %>
                    <tr>
                        <td><%= student.id %></td>
                        <td><%= student.name %></td>
                        <td><%= student.age %></td>
                        <td>
                            <a href="/students/edit/<%= student.id %>">Update</a> |
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
</body>
</html>
